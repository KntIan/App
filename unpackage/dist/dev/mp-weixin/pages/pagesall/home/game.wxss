.infolistbox {
		display: flex;
		justify-content: space-between;
		padding: 15rpx;
		padding-right: 30rpx;
		position: relative;
}
.infolistbox::after {
		content: '';
		height: 1px;
		width: 90%;
		background-color: #eee;
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translate(-50%);
}
