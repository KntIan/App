.titleText {
		font-weight: 400;
		font-size: 24rpx;
		color: #666666;
		margin-bottom: 8rpx;
		display: -webkit-box;
		/* 必须结合下面的属性使用 */
		-webkit-box-orient: vertical;
		/* 设置盒子布局的方向为垂直 */
		-webkit-line-clamp: 2;
		/* 限制显示的行数为2行 */
		overflow: hidden;
		/* 隐藏超出内容 */
		text-overflow: ellipsis;
		/* 使用省略号替代超出的文本 */
		word-break: break-all;
}
